<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head") %>

<body>

    <%- include("../partials/welcome") %>

    <%- include("../partials/header") %>

    <main>
        <h3 class="formulario">Editar productos del Sitio</h3>
        <form action="/products/edicionProducto/<%= productoSeleccionado.id %>?_method=PATCH"  method="POST" enctype="multipart/form-data" class="formulario">
            <div class="formColumnas">
                
                <div class="formulariodiv">
                    <label>Código producto (SKU):</label>
                    <input type="text" name="SKU" class="inputcontrol" value="<%= productoSeleccionado.SKU %> " required oninvalid="setCustomValidity('Debe ingresar un SKU válido')" oninput="setCustomValidity('')">
                </div>

                <div class="formulariodiv">
                    <label>Categoría:</label>
                    <!-- ARREGLAR VALUE -->
                    <select type="text" name="category" class="inputcontrol" value="<%= productoSeleccionado.category %>" required oninvalid="setCustomValidity('Debe seleccionar una categoría')" oninput="setCustomValidity('')">
                        <option value="textiles">Textiles</option>
                        <option value="giftbox">Giftbox</option>
                        <option value="aromaticos">Aromáticos</option>
                        <option value="frascos">Frascos</option>
                        <option value="tazaMate">Tazas y Mates</option>
                        <option value="posaIndiv">Posavasos e Individuales</option>
                        <option value="accesorios">Accesorios</option>
                    </select>    
                </div>
               
            </div>
            
                
                <div class="formulariodiv">
                <label>Nombre producto:</label>
                <input type="text" name="name" class="inputcontrol" value="<%= productoSeleccionado.name %>" required oninvalid="setCustomValidity('Debe ingresar un nombre')">
                </div>
            
            
            
                
                <div class="formulariodiv">
                <label>Descripción:</label>
            
                <textarea name="description" class="inputcontrol"><%= productoSeleccionado.description %> </textarea>
                </div>
            
            
        <div class="formColumnas">
                
                <div class="formulariodiv">
                    <label>Imágen:</label>
                    <input type="file" name="image" class="inputcontrol" accept="image/*" value="<%= productoSeleccionado.image %>" required oninvalid="setCustomValidity('Debe ingresar un formato valido de imágen')" oninput="setCustomValidity('')">
                </div>
            
                
                <div class="formulariodiv">
                    <label>Precio venta:</label>
                    <input type="number" name="price" class="inputcontrol" value="<%= productoSeleccionado.price %>" required oninvalid="setCustomValidity('Ingrese un precio de venta')" oninput="setCustomValidity('')">
                </div>

                <div class="formulariodiv">
                    <label>Stock inicial:</label>
                    <input type="number" name="stock" class="inputcontrol" value="<%= productoSeleccionado.stock %>" required oninvalid="setCustomValidity('Ingrese el inventario inicial')" oninput="setCustomValidity('')">
                </div>

        </div>
        
            <div class="contenedorButton"><button type="submit" class="buttonform">Confirmar</button></div>

            
            
        </form>


    </main>




    <%- include("../partials/footer") %>

</body>
</html>